.oak-popup {
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  overflow: hidden;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0; }
  .oak-popup.opacity-30 {
    background-color: rgba(0, 0, 0, 0.3); }
  .oak-popup.opacity-40 {
    background-color: rgba(0, 0, 0, 0.4); }
  .oak-popup.opacity-50 {
    background-color: rgba(0, 0, 0, 0.5); }
  .oak-popup.opacity-60 {
    background-color: rgba(0, 0, 0, 0.6); }
  .oak-popup.opacity-70 {
    background-color: rgba(0, 0, 0, 0.7); }
  .oak-popup.opacity-75 {
    background-color: rgba(0, 0, 0, 0.4); }
  .oak-popup.opacity-80 {
    background-color: rgba(0, 0, 0, 0.8); }
  .oak-popup.hide {
    display: none; }
  .oak-popup-content {
    background-color: #fff;
    position: absolute;
    transition: all ease-out 300ms; }
  .oak-popup-diretion-top {
    top: 0;
    left: 50%;
    transform: translate(-50%, -100%); }
  .oak-popup-diretion-left {
    top: 50%;
    left: 0;
    transform: translate(-100%, -50%); }
  .oak-popup-diretion-right {
    top: 50%;
    right: 0;
    transform: translate(100%, -50%); }
  .oak-popup-diretion-bottom {
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 100%); }
  .oak-popup-position-top {
    top: 0;
    left: 0; }
  .oak-popup-position-center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); }
  .oak-popup-position-bottom {
    bottom: 0;
    left: 0; }
