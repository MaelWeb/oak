<!--index.wxml-->
<view class="container">
    <oak-button bindtap="openDefault">默认弹窗</oak-button>
    <oak-dialog isShow="{{showDefaultModel}}">默认弹窗</oak-dialog>

    <oak-button bindtap="opentop">点击蒙层不关闭</oak-button>
    <oak-dialog isShow="{{showTModel}}" maskClosable="{{false}}">hehela</oak-dialog>
    
    <oak-button bindtap="openCenter">自定义弹窗</oak-button>
    <oak-dialog isShow="{{showCModel}}" duration="500" animationType="slideInRight" maskStyle="background-color: rgba(0, 0, 0, .3)" dialogStyle="background-color: #fff; top: 50%;left: 50%; transform: translate(-50%,-50%)">自定义弹窗</oak-dialog>
    
</view>
