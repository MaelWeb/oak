<!--index.wxml-->
<view class="container">

    <!-- 基础用法 -->
    <view class="h3">基础用法</view>
    <oak-slide-view delete="delete">
        <oak-list-item slot="left" title="标题" border="{{false}}"></oak-list-item>
    </oak-slide-view>

    <!-- 自定义内容 -->
    <view class="h3">自定义内容</view>
    <oak-slide-view>
        <oak-list-item  slot="left" title="标题" border="{{false}}" arrow="{{false}}" content="显示内容">
            <oak-icon name="select" color="#FD7622" size="34rpx" slot="icon-right" style="margin-top: -4px" color="#999" />
        </oak-list-item>
    </oak-slide-view>

    <!-- 自定义图标 -->
    <view class="h3">自定义图标</view>
    <oak-slide-view>
        <oak-list-item slot="left" title="标题" icon="select" border="{{false}}" arrow="{{true}}">
            <oak-icon name="select" color="#FD7622" size="26rpx" slot="icon-right" />
        </oak-list-item>
        <view slot="delete" class="cancel" bind:tap="delete">删除</view>
    </oak-slide-view>

    <!-- 多操作按钮 -->
    <view class="h3">多操作按钮</view>
    <oak-slide-view rightWidth="240" options="{share: true, edit: true, del: true}">
        <oak-list-item slot="left" title="标题" icon="select" border="{{false}}" arrow="{{true}}">
            <oak-icon name="select" color="#FD7622" size="26rpx" slot="icon-right" />
        </oak-list-item>
        <view slot="share" class="cancel" bind:tap="share">分享</view>
        <view slot="edit" class="cancel" bind:tap="edit">编辑</view>
        <view slot="delete" class="cancel" bind:tap="delete">删除</view>
    </oak-slide-view>

    <!-- 图标按钮 -->
    <view class="h3">图标按钮</view>

    <!-- Slideview 组合 -->
    <view class="h3">Slideview 组合</view>
</view>
