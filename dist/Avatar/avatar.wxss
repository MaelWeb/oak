.inline-block {
  display: inline-block;
  vertical-align: middle;
}
.tc {
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.oak-avatar {
  width: 108rpx;
  height: 108rpx;
  background-color: #ccc;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.oak-avatar-circle {
  border-radius: 100%;
  overflow: hidden;
}
.oak-avatar-name,
.oak-avatar .oak-avatar-icon {
  color: inherit;
  vertical-align: top;
}
.oak-avatar .icon {
  display: block;
}
.oak-avatar-image {
  width: 100%;
  height: 100%;
}
.oak-avatar-square {
  border-radius: 4rpx;
}
.oak-avatar-default {
  width: 108rpx;
  height: 108rpx;
  line-height: 108rpx;
}
.oak-avatar-default .oak-avatar-icon {
  font-size: 108rpx;
}
.oak-avatar-default .oak-avatar-name {
  font-size: 48.6rpx;
}
.oak-avatar-small {
  width: 84rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 24rpx;
}
.oak-avatar-small .oak-avatar-icon {
  font-size: 84rpx;
}
.oak-avatar-small .oak-avatar-name {
  font-size: 37.8rpx;
}
.oak-avatar-large {
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  font-size: 36rpx;
}
.oak-avatar-large .oak-avatar-icon {
  font-size: 160rpx;
}
.oak-avatar-large .oak-avatar-name {
  font-size: 72rpx;
}
