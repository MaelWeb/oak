.oak-collapse-item {
  height: 90rpx;
  overflow: hidden;
  transition: all .2s ease-in-out;
  background-color: #fff; }
  .oak-collapse-item.border {
    border-bottom: 1rpx solid rgba(221, 221, 221, 0.8); }
  .oak-collapse-item.disabled {
    opacity: .8; }
  .oak-collapse-item-title {
    display: flex;
    padding: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #333;
    font-size: 32rpx; }
    .disabled .oak-collapse-item-title {
      color: #999; }
  .oak-collapse-item-title-text {
    flex: 1; }
  .oak-collapse-item-titlle-icon {
    margin-right: 10rpx;
    transition: all .2s ease-in-out;
    color: inherit;
    font-size: inherit; }
    .oak-collapse-item-titlle-icon.down {
      transform: rotateZ(-180deg); }
  .oak-collapse-item-titlle-iconext {
    color: inherit !important;
    font-size: inherit !important; }
  .oak-collapse-item-content {
    margin-left: 30rpx;
    padding: 30rpx 30rpx 30rpx 0;
    color: #999;
    font-size: 28rpx;
    overflow: hidden; }
    .oak-collapse-item-content.show {
      border-top: 1rpx solid rgba(221, 221, 221, 0.8); }
